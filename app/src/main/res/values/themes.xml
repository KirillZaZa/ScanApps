<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ScanApps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light_grey</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <item name="colorSecondary">@color/dark</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="app_background_color">@drawable/light_background_color</item>
        <item name="app_logo">@drawable/ic_find_apps_light</item>
        <item name="switch_background">@drawable/shape_switch_light</item>
        <item name="burger_icon">@drawable/ic_burger_light</item>
        <item name="burger_background">@drawable/shape_circle_light</item>
        <item name="icon_theme">@drawable/ic_sun</item>
        <item name="theme_name">@string/light_theme_name</item>
       <item name="details_background">@drawable/light_details_background</item>
        <item name="text_color">@color/dark</item>
        <item name="text_secondary_color">@color/dark</item>
        <item name="button_ripple">@drawable/light_button_ripple</item>
    </style>

    <style name="MainTextStyle" parent="Theme.ScanApps">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SecondaryTextStyle" parent="Theme.ScanApps">
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="ButtonStyle" parent="Theme.ScanApps">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="DetailsTextStyle" parent="Theme.ScanApps">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?attr/text_secondary_color</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

</resources>