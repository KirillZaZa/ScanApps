<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ScanApps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="app_background_color">@drawable/dark_background_color</item>
        <item name="app_logo">@drawable/ic_find_apps_dark</item>
        <item name="switch_background">@drawable/shape_switch_dark</item>
        <item name="burger_icon">@drawable/ic_burger_dark</item>
        <item name="burger_background">@drawable/shape_circle_dark</item>
        <item name="icon_theme">@drawable/ic_moon</item>
        <item name="theme_name">@string/dark_theme_name</item>
        <item name="items_background">@drawable/dark_item_background</item>
        <item name="details_background">@drawable/dark_details_background</item>
        <item name="text_color">@color/white</item>
        <item name="text_secondary_color">@color/grey</item>
        <item name="button_ripple">@drawable/dark_button_ripple</item>

    </style>

    <style name="MainTextStyle" parent="Theme.ScanApps">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SecondaryTextStyle" parent="Theme.ScanApps">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="ButtonStyle" parent="Theme.ScanApps">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/manrope_regular</item>
    </style>

    <style name="DetailsTextStyle" parent="Theme.ScanApps">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?attr/text_secondary_color</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>


</resources>